<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Mykhailok\SupportChat\Api\ChatMessageRepositoryInterface"
                type="Mykhailok\SupportChat\Model\Repository\ChatMessageRepository"
    />
    <preference for="Mykhailok\SupportChat\Api\FrontendChatMessageRepositoryInterface"
                type="Mykhailok\SupportChat\Model\Repository\FrontendChatMessageRepository"
    />
    <preference for="Mykhailok\SupportChat\Api\Data\ChatMessageSearchResultInterface"
                type="Mykhailok\SupportChat\Model\ChatMessageSearchResult"
    />
    <preference for="Mykhailok\SupportChat\Api\Data\ChatMessageInterface"
                type="Mykhailok\SupportChat\Model\ChatMessageData"
    />
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Mykhailok\SupportChat\Api\Data\ChatMessageInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">my_chat_message</item>
                    <item name="identifierField" xsi:type="string">id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="chats_listing_data_source" xsi:type="string">Mykhailok\SupportChat\Model\ResourceModel\Chat\Grid\Collection</item>
                <item name="messages_listing_data_source" xsi:type="string">Mykhailok\SupportChat\Model\ResourceModel\ChatMessage\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Mykhailok\SupportChat\Model\ResourceModel\ChatMessage\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">my_chat_message</argument>
            <argument name="resourceModel" xsi:type="string">Mykhailok\SupportChat\Model\ResourceModel\ChatMessage</argument>
        </arguments>
    </type>
    <type name="Mykhailok\SupportChat\Model\ResourceModel\Chat\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">my_chat</argument>
            <argument name="resourceModel" xsi:type="string">Mykhailok\SupportChat\Model\ResourceModel\Chat</argument>
        </arguments>
    </type>
    <virtualType name="Mykhailok\SupportChat\Model\Options\AuthorType"
                 type="Mykhailok\SupportChat\Model\Options\AbstractOption">
        <arguments>
            <argument name="options" xsi:type="array">
                <item name="2" xsi:type="string">Admin</item>
                <item name="3" xsi:type="string">Customer</item>
                <item name="4" xsi:type="string">Quest</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Mykhailok\SupportChat\Model\Options\PriorityOption"
                 type="Mykhailok\SupportChat\Model\Options\AbstractOption">
        <arguments>
            <argument name="options" xsi:type="array">
                <item name="0" xsi:type="string">Regular</item>
                <item name="1" xsi:type="string">Waiting</item>
                <item name="2" xsi:type="string">Immediate</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Mykhailok\SupportChat\Model\Options\ActiveOption"
                 type="Mykhailok\SupportChat\Model\Options\AbstractOption">
        <arguments>
            <argument name="options" xsi:type="array">
                <item name="0" xsi:type="string">No</item>
                <item name="1" xsi:type="string">Yes</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="mykhailok_supportchat_chat_message_sample_data" xsi:type="object">
                    Mykhailok\SupportChat\Console\Command\ChatMessageSampleData
                </item>
            </argument>
        </arguments>
    </type>
</config>
