<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns">
            <container htmlClass="sidebar sidebar-static_image" htmlTag="div"  after="sidebar_additional">
                <block class="Magento\Cms\Block\Block" name="static-image">
                    <arguments>
                        <argument name="block_id" xsi:type="string">static-image</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
